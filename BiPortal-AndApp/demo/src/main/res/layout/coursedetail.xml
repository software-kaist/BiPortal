<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_700">
<com.google.android.gms.maps.MapView
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="280dip"/>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyline_margin"
            style="?android:textAppearance"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_location_on_white_18dp"
            android:drawableStart="@drawable/ic_location_on_white_18dp"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/keyline_margin"
            style="?android:textAppearance"
            android:drawablePadding="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <include layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        tools:layout_height="2dp"
        android:layout_marginLeft="@dimen/keyline_margin"
        android:layout_marginRight="@dimen/keyline_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coursedistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyline_margin"
            style="?android:textAppearance"
            android:drawablePadding="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/courseage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/keyline_margin"
            style="?android:textAppearance"
            android:drawablePadding="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <include layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        tools:layout_height="2dp"
        android:layout_marginLeft="@dimen/keyline_margin"
        android:layout_marginRight="@dimen/keyline_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/coursehard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/keyline_margin"
            style="?android:textAppearance"
            android:drawablePadding="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/coursesex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/keyline_margin"
            style="?android:textAppearance"
            android:drawablePadding="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
    </LinearLayout>
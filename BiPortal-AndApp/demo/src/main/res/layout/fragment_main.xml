<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/start"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/heartThumnail"
        android:textColor="@color/nliveo_black"
        android:background="@drawable/heart"
        android:adjustViewBounds="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/start"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/heartRate"
        android:textColor="@color/nliveo_black"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/start"
        android:layout_toRightOf="@+id/heartThumnail"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/nowMessage"
        android:textColor="@color/nliveo_black"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/heartRate"
        android:layout_toRightOf="@+id/heartThumnail"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/speedLabel"
        android:text="속도"
        android:gravity="center"
        android:background="@color/primary_dark"
        android:textColor="@color/nliveo_white"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/heartThumnail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nowSpeed"
        android:gravity="center"
        android:textColor="@color/nliveo_black"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_below="@+id/speedLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/distanceLabel"
        android:text="거리"
        android:gravity="center"
        android:background="@color/primary_dark"
        android:textColor="@color/nliveo_white"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/heartThumnail"
        android:layout_toRightOf="@+id/speedLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nowDistance"
        android:gravity="center"
        android:textColor="@color/nliveo_black"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_below="@+id/distanceLabel"
        android:layout_toRightOf="@+id/nowSpeed"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/timeLabel"
        android:text="경과시간"
        android:gravity="center"
        android:background="@color/primary_dark"
        android:textColor="@color/nliveo_white"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/nowDistance"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nowTime"
        android:gravity="center"
        android:textColor="@color/nliveo_black"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_below="@+id/timeLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/caloryLabel"
        android:text="소모칼로리"
        android:gravity="center"
        android:background="@color/primary_dark"
        android:textColor="@color/nliveo_white"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/nowDistance"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/nowTime"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nowCal"
        android:gravity="center"
        android:textColor="@color/nliveo_black"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_below="@+id/caloryLabel"
        android:layout_toRightOf="@+id/nowTime"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"/>


</RelativeLayout>
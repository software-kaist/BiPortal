<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/preThumnail"
        android:textColor="@color/nliveo_black"
        android:background="@drawable/google_map"
        android:adjustViewBounds="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/preDate"
        android:textColor="@color/nliveo_black"
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/preThumnail"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/preDistance"
        android:textColor="@color/nliveo_black"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/preThumnail"
        android:layout_below="@+id/preDate"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"/>


    <TextView
        android:id="@+id/preTime"
        android:textColor="@color/nliveo_black"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/preDate"
        android:layout_toRightOf="@+id/preDistance"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/preAddress"
        android:textColor="@color/nliveo_black"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/preDistance"
        android:layout_toRightOf="@+id/preThumnail"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/preDetail"
        android:textColor="@color/nliveo_black"
        android:background="@drawable/right_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>